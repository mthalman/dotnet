<Project>

  <Import Project="Sdk.targets" Sdk="Microsoft.DotNet.Arcade.Sdk" Condition="'$(SkipArcadeSdkImport)' != 'true'" />

  <Target Name="GetDotNetSdkArchive">
    <PropertyGroup>
      <DotNetSdkFilenamePrefix>dotnet-sdk-</DotNetSdkFilenamePrefix>
    </PropertyGroup>

    <ItemGroup>
      <SdkArchiveItem Include="$(ArtifactsAssetsDir)Sdk/**/$(DotNetSdkFilenamePrefix)*$(ArchiveExtension)" />
    </ItemGroup>
    
    <PropertyGroup>
      <SdkArchivePath>%(SdkArchiveItem.Identity)</SdkArchivePath>
    </PropertyGroup>
  </Target>

  <Target Name="DetermineSourceBuiltSdkVersion"
          DependsOnTargets="GetDotNetSdkArchive">
    <!--
      Extract SDK version from SDK tarball filename.
      Keep in sync with dotnet-sdk's archive location and filename.

      Example:
      artifacts\assets\<config>\Sdk\9.0.100-alpha.1.24057.1\dotnet-sdk-9.0.100-alpha.1.24057.1-fedora.38-x64.tar.gz
      artifacts\assets\<config>\Sdk\<SdkVersion>\dotnet-sdk-<SdkVersion>-<TargetRid><ArchiveExtension>
    -->
    <PropertyGroup>
      <_DotNetSdkArtifactFileName>%(SdkArchiveItem.Filename)%(SdkArchiveItem.Extension)</_DotNetSdkArtifactFileName>
      <SourceBuiltSdkVersion>$(_DotNetSdkArtifactFileName.Replace('$(DotNetSdkFilenamePrefix)','').Replace('-$(TargetRid)$(ArchiveExtension)',''))</SourceBuiltSdkVersion>
    </PropertyGroup>
  </Target>

</Project>
